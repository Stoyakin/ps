.main
  display flex
  flex-grow 1
  &__content
    width calc(100% - 260px)
  &__aside
    width 260px
  &__slider
    height 100%
    &-slide
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
    .swiper
      &-container
        height 100%
      &-buttons
        width 100%
        position absolute
        left 0
        top 50%
        transform translateY(-50%)
        z-index 1
      &-button
        &-prev, &-next
          width 82px
          height 82px
          transition opacity .5s
          .ico-arrow
            width 82px
            height 82px
            fill #fff
          &:hover
            opacity .7
        &-prev
          .ico-arrow
            transform scale(-1, 1)
      &-count
        display flex
        justify-content center
        position absolute
        bottom 40px
        left 50%
        transform translateX(-50%)
        width 150px
        z-index 1
        &-item, &-all
          color #fff
          font-size 24px
          line-height 26px
        &-all
          margin-left 2px
          &:before
            content '/'
            display inline-block
            vertical-align top
            position relative
            color #fff
            font-size 24px
            line-height 26px
            margin-right 4px
  &__aside
    display flex
    flex-grow 1
    position relative
    padding 40px 40px
    background-color $gray
    z-index 1
    &.active
      &:before
        content ''
        position absolute
        top 0
        right 100%
        width calc(100vw - 100%)
        height 100%
        background-color rgba(#000, .75)
        z-index -1
      &.dark
        &:before
          right 0
          width 100%
          z-index 1
    &.show-step3
      .from-search__submit
        z-index 3
