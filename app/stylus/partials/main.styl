.main
  display flex
  flex-grow 1
  @media $mLandscapeMax
    flex-wrap wrap
    height calc(100vh - 80px)
  &__content
    width calc(100% - 260px)
    @media $mLandscapeMax
      width 100%
      height calc(100% - 99px)
      min-height 300px
    &--dark
      width 100%
      flex-grow 1
      display flex
      justify-content center
      align-items center
      background-color #2F2F2F
      @media $mLandscapeMax
        height 100%
  &__btn-start
    text-transform uppercase
    margin-top -100px
    @media $mLandscapeMax
      margin-top 0
  &__slider
    height 100%
    &-slide
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
    .swiper
      &-container
        height 100%
      &-buttons
        width 100%
        position absolute
        left 0
        top 50%
        transform translateY(-50%)
        z-index 1
      &-button
        &-prev, &-next
          width 82px
          height 82px
          transition opacity .5s
          @media $mLandscapeMax
            width 50px
            height 50px
          .ico-arrow
            width 82px
            height 82px
            fill #fff
            @media $mLandscapeMax
              width 50px
              height 50px
          &:hover
            opacity .7
        &-prev
          left 25px
          @media $mLandscapeMax
            left 9px
          .ico-arrow
            transform scale(-1, 1)
        &-next
          right 25px
          @media $mLandscapeMax
            right 9px
      &-count
        display flex
        justify-content center
        position absolute
        bottom 40px
        left 50%
        transform translateX(-50%)
        width 150px
        z-index 1
        @media $mLandscapeMax
          bottom 34px
        &-item, &-all
          color #fff
          font-size 24px
          line-height 26px
        &-all
          margin-left 2px
          &:before
            content '/'
            display inline-block
            vertical-align top
            position relative
            color #fff
            font-size 24px
            line-height 26px
            margin-right 4px
  &__aside
    display flex
    flex-grow 1
    position relative
    padding 36px 40px 40px
    background-color $gray
    width 260px
    z-index 1
    @media $mLandscapeMax
      width 100%
      height 100px
      padding 0
    @media $mLandscape
      &:after
        content ''
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        background-color $gray
        z-index -1
    &:before
      content ''
      position fixed
      width 100%
      height 100%
      left 0
      top 0
      background-color rgba(#000, .75)
      opacity 0
      visibility hidden
      transition opacity .5s
      z-index -2
      @media $mLandscapeMax
        position fixed
        width 100%
        left 0
        z-index 0
    &.active
      &:before
        opacity 1
        visibility visible
      &.dark
        &:before
          right 0
          width 100%
          z-index 1
    &.show-step1
      @media $mLandscapeMax
        .from-search__top
          position relative
          z-index 3
    &.show-step2
      @media $mLandscapeMax
        .from-search__submit
          z-index 3
