button
  background none
  padding 0
  border none
  outline none
  user-select none
  cursor pointer

.btn
  display inline-block
  vertical-align top
  position relative
  text-align center
  color $darkGray
  font-size 24px
  line-height 26px
  background-color white
  border-radius 10px
  padding 18px 25px 16px
  min-width 200px
  transition color .5s
  &:hover
    color rgba($darkGray, .7)
  &--red
    border-radius 3px
    color #fff
    min-width 128px
    background-color $red
    padding-top 6px
    padding-bottom 8px
    &:hover
      color rgba(#fff, .7)
