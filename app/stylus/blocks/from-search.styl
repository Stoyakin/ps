.from-search
  display flex
  flex-direction column
  flex-grow 1
  width 100%
  @media $mLandscapeMax
    flex-direction row
  &__top
    @media $mLandscapeMax
      width 100%
      background-color $gray
      padding 16px 19px 0
  &__title
    color $black
    font-size 18px
    line-height 24px
    text-align center
    margin-bottom 18px
    @media $mLandscapeMax
      text-align left
      margin-bottom 0
  &__input
    width 100%
    height 30px
    padding 0 15px
    color $black
    font-size 18px
    line-height 30px
    background-color white
    border none
    outline none
    &.error
      border 1px solid $red
    @media $mLandscapeMax
      max-width 236px
      height 40px
  &__submit
    display flex
    justify-content center
    align-items center
    margin-top auto
    width 100%
    height 180px
    background-color $red
    @media $mLandscapeMax
      flex-shrink 0
      width 100px
      height 100px
      margin-left auto
      margin-top 0
    .ico-plus
      fill #fff
      width 140px
      height 140px
      transition fill .5s
      @media $mLandscapeMax
        width 60px
        height 60px
    &:hover
      .ico-plus
        fill rgba(#fff, .7)
