.from-search
  display flex
  flex-direction column
  flex-grow 1
  width 100%
  &__title
    color $black
    font-size 18px
    line-height 24px
    text-align center
    margin-bottom 25px
  &__input
    width 100%
    height 30px
    padding 0 15px
    color $black
    font-size 18px
    line-height 30px
    background-color white
    border none
    outline none
  &__submit
    display flex
    justify-content center
    align-items center
    margin-top auto
    width 100%
    height 180px
    background-color $red
    .ico-plus
      fill #fff
      width 140px
      height 140px
      transition fill .5s
    &:hover
      .ico-plus
        fill rgba(#fff, .7)
